<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme.   这样既使用了Light.NoTitleBar，又使用了4.0的UI  不然还是旧版本的UI-->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <!-- 使用侵晨式状态栏 -->
        <item name="android:fitsSystemWindows">true</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <!-- 首页的标题文字 -->
    <style name="splash_title">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">24sp</item>
        
    </style>
    <!-- 首页版本号文字 -->
    <style name="splash_version" >
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14sp</item>
        
    </style>
    
    <!-- 冰箱标题文字 -->
    <style name="ref_18_white">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
        
    </style>
    
     <!-- 冰箱标题文字 -->
    <style name="ref_18_gray">
        <item name="android:textColor">#3f708e</item>
        <item name="android:textSize">18sp</item>
        
    </style>
    <!-- 冰箱温度 -->
    <style name="ref_68_white">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">68sp</item>
    </style>
    <!-- 展开后冰箱白色字体大小 -->
	<style name="ref_24_white">
	    <item name="android:textColor">#ffffff</item>
	    <item name="android:textSize">28sp</item>
	</style>
	<!-- 冰箱展开后灰色温度 -->
	<style name="ref_24_gray">
	    <item name="android:textColor">#333333</item>
	    <item name="android:textSize">68sp</item>
	</style>
	
	<style name="close_dialog" parent="android:Theme.Dialog">
	    <item name="android:windowNoTitle">true</item>
	    <item name="android:windowBackground">@android:color/transparent</item>
	    <item name="android:windowIsFloating">true</item>
	</style>
	<!-- 寻找手机样式 -->
	<style name="find_phone_sty">
	    <item name="android:gravity">center_vertical</item>
       <item name="android:layout_marginTop">3dp</item>
       <item name="android:textSize">20sp</item>
       <item name="android:textColor">#000000</item>
       <item name="android:layout_width">wrap_content</item>
       <item name="android:layout_height">wrap_content</item>
	</style>
	 <style name="button_next_style">
        <item name="android:onClick">next</item>
        <item name="android:drawableRight">@drawable/ic_face</item>
        <item name="android:background">#cc66cc</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:text">下一步</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
      <style name="button_pre_style">
        <item name="android:onClick">pre</item>
        <item name="android:drawableLeft">@drawable/ic_face</item>
        <item name="android:background">#cc66cc</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:text">上一步</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
	
</resources>
